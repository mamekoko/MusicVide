<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">

      <h2 class="text-dark bg-light p-4 mb-0">プロフィール編集</h2>
        <div class="form-body p-4">
          <%= form_with model: @user do |f| %>
            <h5>名前</h5>
            <%= f.text_field :name, class:"form-control", autofocus: true, id:"inputName", placeholder:"名前"%>
            <h5>プロフィール画像</h5>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
            <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-info mt-4" %>
          <% end %>
        </div>
    </div>
  </div>
</div>