<% if post_image.liked_by?(current_user, @post_image) %>

  <%= link_to post_image_likes_path(post_image), method: :delete, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= post_image.likes.count %> いいね
  <% end %>

<% else %>

  <%= link_to post_image_likes_path(post_image), method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= post_image.likes.count %> いいね
  <% end %>

<% end %>
