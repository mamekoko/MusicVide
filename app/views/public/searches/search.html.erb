<div class="card-list-container py-5">
  <div class="card-body">
    <div class="row">
      <div class="col-md-6 mx-auto">
        <h2>検索一覧</h2>
      </div>
    </div>
  </div>

    <table class="table table-hover table-inverse">
      <!--検索対象モデルがUserの時 -->
      <% if @range == "User" %>
      <h2>ユーザー名検索 "<%= @word %>"</h2>
        <thead>
          <tr>
            <th>プロフィール画像</th>
            <th>名前</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100, 100), class:"mt-3 rounded-circle"; %></td>
              <td><%= user.name %></td>
            </tr>
          <% end %>
        </tbody>
      <% else %>
        <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
        <thead>
          <tr>
            <th></th>
            <th>タイトル名</th>
            <th>説明文</th>
          </tr>
        </thead>
        <tbody>
        <h2>タイトル名検索 "<%= @word %>"</h2>
        <% @post_images.each do |post_image| %>
          <tr>
            <td>
              <%= link_to user_path(post_image.user) do %>
                <%= image_tag post_image.user.get_profile_image(100, 100), class:"mt-3 rounded-circle"; %>
              <% end %>
            </td>
            <td><%= link_to post_image.title , post_image_path(post_image.id) %></td>
            <td><%= post_image.caption %></td>
          </tr>
        <% end %>
        </tbody>
      <% end %>
    </table>
</div>
