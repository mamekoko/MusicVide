<h2>検索一覧</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <tbody>
      <% @post_images.each do |post_image| %>
        <tr>
          <td><%= post_image.title %></td>
          <td><%= post_image.caption %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
